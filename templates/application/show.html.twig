{% extends 'base.html.twig' %}

{% block title %}Application{% endblock %}

{% block content %}
    <h1>Application</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ application.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ application.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ application.address }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ application.createdAt ? application.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ application.updatedAt ? application.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Manager</th>
                <td>{{ application.manager.email is defined ? application.manager.email : 'not assigned' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ application.status.name }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Comments</h3>

    <table class="table">
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.author.email }}</td>
                <td>{{ comment.text }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('application_index') }}">back to list</a>

    <a href="{{ path('application_edit', {'id': application.id}) }}">edit</a>

    {{ include('application/_delete_form.html.twig') }}
{% endblock %}
