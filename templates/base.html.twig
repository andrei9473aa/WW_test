<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}

            {% block header %}
                {{ encore_entry_link_tags('app') }}
            {% endblock %}

            <div class="container">
                <div class="row">
                    <div class="col-12">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>

            {% block footer %}
                {{ encore_entry_script_tags('app') }}
            {% endblock %}

        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
